@model IEnumerable<MTS.Data.Entities.Call>

@{
	ViewData["Title"] = "Index";
}

<h1>Звонки</h1>

<p>
	<a asp-action="Create">Создать звонок</a>
</p>
<table class="table table_data" style="width: 800px">
	<thead>
		<tr>
			<th>
				Дата начала
			</th>
			<th>
				Дата конца
			</th>
			<th>
				Клиент
			</th>
			<th>
				Населёный пункт
			</th>
			<th>
				Количеcтво минут(обычный тариф)
			</th>
			<th>
				Количество минут(льготный тариф)
			</th>
			<th>
				Стоимость
			</th>
			<th>
				Время платежа
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.DateStart)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DateEnd)
				</td>
				<td>
					@{var quote = item.Client.LastName + " " + item.Client.FirstName + " " + item.Client.PastName;}
					@quote
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cost.Locality)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.NumberOfMinutes)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.PreferentialNumberOfMinutes)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Sum)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Payment.Date)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> @*|
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
				</td>
			</tr>
		}
	</tbody>
</table>

